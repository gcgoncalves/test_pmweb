<%= stylesheet_link_tag "tables" %>

<script language="javascript" type="text/javascript" src="../../js/jquery/jquery.js"></script>
<script>
$(document).ready(function(){
   $("tr:even").addClass("even");
   $("tr:odd").addClass("odd");
});
</script>


<h1>Empresas</h1>
<%= link_to "Adicionar", new_company_path %> 
<%= will_paginate @companies %>
<table class='datatable'>
  <tr>
    <th><%= sortable "name", "Nome Fantasia" %></th>
    <th><%= sortable "legal_name", "Razão Social" %></th>
    <th><%= sortable "zip_code", "CEP" %></th>
    <th><%= sortable "address", "Endereço" %></th>
    <th><%= sortable "phone", "Telefone" %></th>
    <th><%= sortable "type", "Tipo" %></th>
    <th>Editar</th>
    <th>Remover</th>
  </tr>
 
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.legal_name %></td>
      <td><%= company.zip_code %></td>
      <td><%= company.address %></td>
      <td><%= company.phone %></td>
      <td><%= company.company_type %></td>
      <td><%= link_to 'Editar', edit_company_path(company) %></td>
      <td><%= link_to 'Remover', company_path(company),
                    method: :delete, data: { confirm: 'Você tem certeza de quer deletar esta empresa?' } %></td>
    </tr>
  <% end %>
</table>