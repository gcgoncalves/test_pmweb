<%= stylesheet_link_tag "forms" %>

<%= semantic_form_for @company do |f| %>
    <%= f.input :name, :label => "Nome Fantasia" %>
    <%= f.input :legal_name, :label => "Razão Social" %>
    <%= f.input :zip_code, :label => "CEP", :mask => '99.999-999' %>
    <%= f.input :address, :label => "Endereço" %>
    <%= f.input :phone, :label => "Telefone", :mask => '9999-9999' %>
    <%= f.input :company_type, :label => "Tipo" %>
    <%= f.submit "Enviar" %>
<% end %>